<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Video_Converter"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit" x:Class="Video_Converter.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="#FF1F1F1F">
        <MediaElement x:Name="video" HorizontalAlignment="Left" Height="167" Margin="20,26,0,0" VerticalAlignment="Top" Width="316" LoadedBehavior="Manual" UnloadedBehavior="Manual"/>
        <Button x:Name="import" Content="import" HorizontalAlignment="Left" Margin="445,46,0,0" VerticalAlignment="Top" Width="102" Height="55" Click="ImportClick"/>
        <Button x:Name="export" Content="export" HorizontalAlignment="Left" Margin="600,46,0,0" VerticalAlignment="Top" Width="102" Height="55" Click="Export_Click"/>
        <Button x:Name="videoPlay" Content="Play" HorizontalAlignment="Left" Margin="60,252,0,0" VerticalAlignment="Top" Width="75" Click="VideoPlayClick"/>
        <Button x:Name="videoPause" Content="Pause" HorizontalAlignment="Left" Margin="180,252,0,0" VerticalAlignment="Top" Width="75" Click="VideoPauseClick"/>
        <TextBlock x:Name="test" HorizontalAlignment="Left" Margin="492,335,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="74" Width="189" Foreground="White" FontSize="16"/>
        <xctk:PropertyGridEditorTimeSpanUpDown x:Name="startTimeValue" HorizontalAlignment="Left" Margin="71,355,0,0" VerticalAlignment="Top" Width="133"/>
        <xctk:PropertyGridEditorTimeSpanUpDown x:Name="endTimeValue" HorizontalAlignment="Left" Margin="255,355,0,0" VerticalAlignment="Top" Width="133"/>
        <TextBlock x:Name="startTime" HorizontalAlignment="Left" Margin="71,321,0,0" TextWrapping="Wrap" Text="Start time" VerticalAlignment="Top" Height="29" Width="133" Foreground="White" FontSize="16"/>
        <TextBlock x:Name="endTime" HorizontalAlignment="Left" Margin="255,321,0,0" TextWrapping="Wrap" Text="end time" VerticalAlignment="Top" Height="29" Width="133" Foreground="White" FontSize="16"/>
        <TextBlock x:Name="startTime_Copy" HorizontalAlignment="Left" Margin="71,380,0,0" TextWrapping="Wrap" Text="d : hh : mm : ss" VerticalAlignment="Top" Height="29" Width="133" Foreground="White" FontSize="16" Opacity="0.5"/>
        <TextBlock x:Name="startTime_Copy1" HorizontalAlignment="Left" Margin="255,380,0,0" TextWrapping="Wrap" Text="d : hh : mm : ss" VerticalAlignment="Top" Height="29" Width="133" Foreground="White" FontSize="16" Opacity="0.5"/>
        <TextBox x:Name="outputFileName" HorizontalAlignment="Left" Height="23" Margin="600,179,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBlock HorizontalAlignment="Left" Margin="600,151,0,0" TextWrapping="Wrap" Text="Output File Name" VerticalAlignment="Top" Width="120" Height="23" Foreground="White"/>
        <Button x:Name="openExplorer" Content="Button" HorizontalAlignment="Left" Margin="575,272,0,0" VerticalAlignment="Top" Width="106" Height="37" Click="openExplorer_Click"/>
    </Grid>
</Window>
